@model IEnumerable<ITO_TicketManagementSystem.Models.Ticket>

<div class="container">
    <h1 class="h3 mb-4">Admin Dashboard</h1>
    <p class="text-muted">Welcome, @User.Identity?.Name</p>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <h6>Total Tickets</h6>
                <h2>@(Model?.Count() ?? 0)</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <h6>New</h6>
                <h2>@(Model?.Count(t => t.Status == "New") ?? 0)</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <h6>In Progress</h6>
                <h2>@(Model?.Count(t => t.Status == "In Progress") ?? 0)</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3">
                <h6>Resolved</h6>
                <h2>@(Model?.Count(t => t.Status == "Resolved") ?? 0)</h2>
            </div>
        </div>
    </div>

    <!-- Recent Tickets -->
    <div class="bg-white rounded-3 shadow-sm p-3 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Recent Tickets</h5>
            <a asp-controller="Ticket" asp-action="Display" class="btn btn-sm btn-outline-primary">
                View All
            </a>
        </div>
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Assigned To</th>
                        <th>Updated</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Take(3))
                    {
                        <tr>
                            <td class="text-muted">#@t.TicketId</td>
                            <td>@t.Title</td>
                            <td><span class="badge bg-secondary">@t.Status</span></td>
                            <td>@t.AssignedToUser?.UserName ?? "Unassigned"</td>
                            <td class="text-muted small">@t.UpdatedAt?.ToString("g") ?? "-"</td>
                            <td class="text-end">
                                <a asp-controller="Ticket" asp-action="Details" asp-route-id="@t.TicketId"
                                   class="btn btn-sm btn-outline-primary me-1">Open</a>
                                <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@t.TicketId"
                                   class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No tickets available.</p>
        }
    </div>

    <!-- Manage User Roles -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Manage User Roles</h5>
        </div>
        <div class="card-body">
            <!-- Assign Role -->
            <form asp-controller="Admin" asp-action="AssignRole" method="post" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Unassigned User</label>
                    <select name="email" class="form-select">
                        @if (ViewBag.UnassignedUsers != null && ((List<ITO_TicketManagementSystem.Models.ApplicationUser>)ViewBag.UnassignedUsers).Any())
                        {
                            foreach (var u in ViewBag.UnassignedUsers)
                            {
                                <option value="@u.Email">@u.Email (@u.UserName)</option>
                            }
                        }
                        else
                        {
                            <option disabled>No unassigned users</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select">
                        <option value="Admin">Admin</option>
                        <option value="Help Desk Team">Help Desk Team</option>
                        <option value="Engineering Team">Engineering Team</option>
                        <option value="Employees">Employees</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">Assign</button>
                </div>
            </form>

            <!-- Remove Role -->
            <form asp-controller="Admin" asp-action="RemoveRole" method="post" class="row g-3 mt-3">
                <div class="col-md-5">
                    <label class="form-label">User with Role</label>
                    <select name="email" class="form-select">
                        @if (ViewBag.UsersWithRoles != null && ((List<ITO_TicketManagementSystem.Models.ApplicationUser>)ViewBag.UsersWithRoles).Any())
                        {
                            foreach (var u in ViewBag.UsersWithRoles)
                            {
                                <option value="@u.Email">@u.Email (@u.UserName)</option>
                            }
                        }
                        else
                        {
                            <option disabled>No users with roles</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select">
                        <option value="Admin">Admin</option>
                        <option value="Help Desk Team">Help Desk Team</option>
                        <option value="Engineering Team">Engineering Team</option>
                        <option value="Employees">Employees</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-danger w-100">Remove</button>
                </div>
            </form>
        </div>
    </div>
</div>

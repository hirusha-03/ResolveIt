@model ITO_TicketManagementSystem.Models.Ticket
@{
    ViewData["Title"] = "Delete Confirmation";
}
<a href="javascript:history.back()" class="btn btn-secondary mb-3">
    ← Back
</a>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card delete-card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Delete Confirmation
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading">Warning!</h4>
                        <p class="mb-0">You are about to permanently delete this ticket. This action cannot be undone.</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="TicketId" />

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input type="text" class="form-control readonly-field" asp-for="Title" readonly />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea class="form-control readonly-field" asp-for="Description" rows="5" readonly></textarea>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
}

@model IEnumerable<ITO_TicketManagementSystem.Models.TicketComment>

@{
    ViewData["Title"] = "Ticket Comments";
}
<a href="javascript:history.back()" class="btn btn-secondary mb-3">
    ← Back
</a>

<div class="ticket-section shadow-sm">
    <h4 class="mb-3">Ticket Comments</h4>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover tickets-table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Ticket Title</th>
                    <th>Comment By</th>
                    <th>Comment</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.OrderByDescending(x => x.CreatedAt))
                {
                    <tr>
                        <td>@c.TicketId</td>
                        <td>@c.Ticket?.Title</td>
                        <td>@(c.CreatedByUser?.UserName ?? "Unknown")</td>
                        <td class="ticket-description">@c.Comment</td>
                        <td>@c.CreatedAt.ToLocalTime().ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No comments</p>
    }
</div>
